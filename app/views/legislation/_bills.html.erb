<% unless @bills.nil? %>
  <% unless @bills.empty? %>
  <br><br>
  <h5>Recent <%= us_states.select { |full, abbr| abbr == params[:state].upcase }[0][0] %> Legislation:</h5>
  <table>
    <thead>
      <tr>
          <th data-field="bill">Bill</th>
          <th data-field="title">Title</th>
          <th data-field="session">Session</th>
      </tr>
    </thead>

    <tbody>
      <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.bill_id %></td>
        <td><%= bill.title %></td>
        <td><%= bill.session %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
    <%= "No results found." %>
  <% end %>
<% end %>
